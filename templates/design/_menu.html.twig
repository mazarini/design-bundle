<!-- start menu -->
<div class="modal fade" id="menuDesignModal" tabindex="-1" aria-labelledby="menuDesignModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title fs-5" id="menuDesignModalLabel">Menu</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {% include '@MazariniDesign/design/_list.html.twig' with {'template': template, 'tree': tree} only %}
            </div>
        </div>
    </div>
    <button type="button" class="invisible" id="menuDesignModalButton" data-bs-toggle="modal" data-bs-target="#menuDesignModal"></button>
    <script>
        document.addEventListener('keydown', (event) => {
            var name = event.key;
            if (name == "Escape") {
                element = document.getElementById('menuDesignModalButton').click();
            }
        }, false);
    </script>
</div>
<!-- end menu -->
