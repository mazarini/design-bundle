{% extends '@MazariniDesign/layout.html.twig' %}

{% block header %}
    <h1>Header</h1>
{% endblock %}

{% block side_primary %}
    <h1 id="h1">Primary</h1>
{% endblock %}

{% block body %}
    <h1>Article</h1>
    <h2 class="visibility-xs">XS</h2>
    <h2 class="visibility-sm">SM</h2>
    <h2 class="visibility-md">MD</h2>
    <h2 class="visibility-lg">LG</h2>
    <h2 class="visibility-xl">XL</h2>
    <h2 class="visibility-xxl">XXL</h2>
{% endblock %}

{% block side_secondary %}
    <h1 id="h1">Secondary</h1>
{% endblock %}

{% block footer %}
    <h1>Footer</h1>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        #container {
            background-color: #0000FF;
        }
        #body {
            background-color: #0000FF;
        }
        #header {
            background-color: #FF0000;
            border: 1px solid #000000;
        }
        #primary {
            background-color: #FFFF00;
            border: 1px solid #000000;
        }
        #article {
            background-color: #FF00FF;
            border: 1px solid #000000;
        }
        #secondary {
            background-color: #00FFFF;
            border: 1px solid #000000;
        }
        #footer {
            background-color: #FF0000;
            border: 1px solid #000000;
        }
    </style>
{% endblock %}
